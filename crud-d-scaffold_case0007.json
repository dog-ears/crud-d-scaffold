/* Varidation test without laravel auth  */

{
    "app_type": "web",                          /* [default:web]  */
    "use_laravel_auth": "false",                  /* [default:false]  */
    "models": [
        {
            "name": "nicePost",
            "display_name": "NICE POST",
            "use_soft_delete": "true",
            "schemas": [
                {
					/* stringTextareaRequireUniqueMax10 */
                    "name": "bigTitle",         /* [required] */
                    "type": "string",           /* [default:string] ex( integer, string ) */
                    "input_type": "textarea",   /* [default:text] text, textarea */ /* relation_column forced to pulldown */
                    "varidate": "max:10|unique",/* [default:""] */
                    "faker_type": "name()",     /* [default -> ''(nullable must be true) ] ex( randomDigit(), randomNumber(2), numberBetween(1,30), word(), sentence(), paragraph(), text(), name(), address(), date('Y-m-d','now'), safeEmail(), password() )  */
                    "nullable": "false",        /* [default:false] ex( true, false ) */
                    "display_name": "BIG TITLE",/* [required] */
                    "show_in_list": "true",     /* [default:true] ex( true, false ) */
                    "show_in_detail": "true",   /* [default:true] ex( true, false ) */
					"belongsto": "",            /* [default:""] */
					"belongsto_column": ""      /* [default:""] */
                },{
					/* integerTextMax10 */
                    "name": "securityLevel",	/* [required] */
                    "type": "integer",          /* [default:string] ex( integer, string ) */
                    "input_type": "text",       /* [default:text] text, textarea */ /* relation_column forced to pulldown */
                    "varidate": "numeric|max:10",		/* [default:""] */
                    "faker_type": "numberBetween(1,30)",     /* [default -> ''(nullable must be true) ] ex( randomDigit(), randomNumber(2), numberBetween(1,30), word(), sentence(), paragraph(), text(), name(), address(), date('Y-m-d','now'), safeEmail(), password() )  */
                    "nullable": "false",        /* [default:false] ex( true, false ) */
                    "display_name": "SECURITY LEVEL",/* [required] */
                    "show_in_list": "true",     /* [default:true] ex( true, false ) */
                    "show_in_detail": "true",   /* [default:true] ex( true, false ) */
					"belongsto": "",            /* [default:""] */
					"belongsto_column": ""      /* [default:""] */
                }
            ]
        },{
            "name": "beautifulTag",
            "display_name": "TAG",
            "use_soft_delete": "true",
            "schemas": [
                {
                    "name": "tagName",
                    "type": "string",
                    "input_type": "text",
                    "varidate": "",
                    "faker_type": "name()",
                    "nullable": "false",
                    "display_name": "TAG NAME",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "",
					"belongsto_column": ""
                }
            ]
        },{
            "name": "brilliantCategory",
            "display_name": "CATEGORY",
            "use_soft_delete": "true",
            "schemas": [
                {
                    "name": "categoryName",
                    "type": "string",
                    "input_type": "text",
                    "varidate": "",
                    "faker_type": "name()",
                    "nullable": "false",
                    "display_name": "CATEGORY NAME",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "",
					"belongsto_column": ""
                }
            ]
        },{
            "name": "goodComment",
            "display_name": "GOOD COMMENT",
            "use_soft_delete": "true",
            "schemas": [
                {
                    "name": "commenterName",
                    "type": "string",
                    "input_type": "text",
                    "faker_type": "name()",
                    "nullable": "false",
                    "display_name": "COMMENTER NAME",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "",
					"belongsto_column": ""
                },{
                    "name": "nicePostId",
                    "type": "integer",
                    "input_type": "text",
                    "faker_type": "numberBetween(1,30)",
                    "nullable": "false",
                    "display_name": "NICE POST - BIG TITLE",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "nicePost",
					"belongsto_column": "bigTitle"
                }
            ]
        }
    ],
    "pivots":[
        {
            "parentModel":"nicePost",
            "parentModel_column":"bigTitle",
            "childModel":"beautifulTag",
            "childModel_column":"tagName",
            "use_soft_delete": "false",
            "schemas": [
                {
					/* integerTextMax10 */
                    "name":"size",
                    "type":"integer",
                    "input_type": "text",
                    "varidate": "numeric|max:10",		/* [default:""] note: unique is not allowed in pivots*/
                    "faker_type": "numberBetween(1,10)",
                    "nullable": "true",
                    "display_name": "SIZE"
                },{
					/* stringTextareaRequireUniqueMax10 */
                    "name":"note",
                    "type":"string",
                    "input_type": "text",
                    "varidate": "max:10",/* [default:""] */
                    "faker_type": "name()",
                    "nullable": "true",
                    "display_name": "NOTE"
                }
            ]
        }
    ]
}