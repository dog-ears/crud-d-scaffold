/* for use laravel auth  */

{
    "app_type": "web",                          /* [default:web]  */
    "use_laravel_auth": "true",                  /* [default:false]  */
    "models": [
        {
            "name": "user",              /* [required] format[nameName] */
            "display_name": "USER",     /* [required] */
            "use_soft_delete": "true",          /* [default:false] ex( true, false ) */
            "schemas": []               /* Don't write property [ name', 'email', 'password ] In model laravel Auth "user"  */
        },{
            "name": "nicePost",
            "display_name": "NICE POST",
            "use_soft_delete": "false",
            "schemas": [
                {
                    "name": "bigTitle",
                    "type": "string",
                    "input_type": "text",
                    "faker_type": "sentence()",
                    "nullable": "false",
                    "display_name": "BIG TITLE",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "",
					"belongsto_column": ""
                },{
                    "name": "shallowBody",
                    "type": "string",
                    "input_type": "text",
                    "faker_type": "paragraph()",
                    "nullable": "false",
                    "display_name": "SHALLOW BODY",
                    "show_in_list": "true",
                    "show_in_detail": "false",
					"belongsto": "",
					"belongsto_column": ""
                },{
                    "name": "userId",
                    "type": "integer",          /* related column froce type to unsigned integer */
                    "input_type": "text",       /* related column froce input_type to pulldown */
                    "faker_type": "numberBetween(1,30)",
                    "nullable": "false",
                    "display_name": "USER - NAME",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "user",
					"belongsto_column": "name"
                }
            ]
        },{
            "name": "goodComment",
            "display_name": "GOOD COMMENT",
            "use_soft_delete": "true",
            "schemas": [
                {
                    "name": "commenterName",
                    "type": "string",
                    "input_type": "text",
                    "faker_type": "name()",
                    "nullable": "false",
                    "display_name": "COMMENTER NAME",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "",
					"belongsto_column": ""
                },{
                    "name": "commentBody",
                    "type": "string",
                    "input_type": "textarea",
                    "faker_type": "paragraph()",
                    "nullable": "false",
                    "display_name": "COMMENTER BODY",
                    "show_in_list": "false",
                    "show_in_detail": "true",
					"belongsto": "",
					"belongsto_column": ""
                },{
                    "name": "nicePostId",
                    "type": "integer",
                    "input_type": "text",
                    "faker_type": "numberBetween(1,30)",
                    "nullable": "false",
                    "display_name": "NICE POST - BIG TITLE",
                    "show_in_list": "true",
                    "show_in_detail": "true",
					"belongsto": "nicePost",
					"belongsto_column": "bigTitle"
                }
            ]
        }
    ]
}